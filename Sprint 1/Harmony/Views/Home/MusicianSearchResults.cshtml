@model IEnumerable<Harmony.Models.User>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h3 id="form-title">Results</h3>
            @if (ViewBag.City != null)
            {
                <p>City Filter: @ViewBag.City</p>
            }
            @if (ViewBag.State != null)
            {
                <p>State Filter: @ViewBag.State</p>
            }
            @if (ViewBag.Genre != null)
            {
                <p>Genre Filter: @ViewBag.Genre</p>
            }
            <hr />
            <table>
                <tr>
                    <th>Name</th>
                    <th>&emsp; Location</th>
                    <th>&emsp; Email</th>
                    <th></th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => user.FirstName) @Html.DisplayFor(x => user.LastName)</td>
                        <td>&emsp; @Html.DisplayFor(x => user.City), @Html.DisplayFor(x => user.State)</td>
                        <td>&emsp; @Html.DisplayFor(x => user.Email)</td>
                        <td>&emsp; @Html.ActionLink("Profile", "MusicianDetails", "Users", new { id = user.ID }, null)</td>
                    </tr>
                }
            </table>
            <hr />
            @Html.ActionLink("Search Again", "Search")
        </div>
    </div>
}
@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h2 style="text-align:center;">No Matches</h2>
        </div>
    </div>
 }

