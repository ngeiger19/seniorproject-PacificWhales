@model IEnumerable<Harmony.Models.Venue>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h3 id="form-title">Results</h3>
            @if (ViewBag.City != null)
            {
                <p>City Filter: @ViewBag.City</p>
            }
            @if (ViewBag.State != null)
            {
                <p>State Filter: @ViewBag.State</p>
            }
            <hr />
            <table>
                <tr>
                    <th>Name &emsp;</th>
                    <th>Location</th>
                    <th></th>
                </tr>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => venue.VenueName)</td>
                        <td>@Html.DisplayFor(x => venue.AddressLine1) @Html.DisplayFor(x => venue.City), @Html.DisplayFor(x => venue.State)</td>
                        <td>&emsp; @Html.ActionLink("Profile", "Details", "Venues", new { id = venue.ID }, null)</td>
                    </tr>
                }
            </table>
            <hr />
            @Html.ActionLink("Search Again", "Search")
        </div>
    </div>
}
@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h2 style="text-align:center;">No Matches</h2>
        </div>
    </div>
}



